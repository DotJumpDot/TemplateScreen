---
import Layout from '../layouts/Layout.astro';
import PixelHeader from '../components/template-2/PixelHeader.astro';
import PixelHero from '../components/template-2/PixelHero.astro';
import PixelGames from '../components/template-2/PixelGames.astro';
import PixelLeaderboard from '../components/template-2/PixelLeaderboard.astro';
import PixelFooter from '../components/template-2/PixelFooter.astro';
---

<Layout title="Retro Game - Level Up Your Gaming Experience">
  <main>
    <PixelHeader />
    <PixelHero />
    <PixelGames />
    <PixelLeaderboard />
    <PixelFooter />
  </main>
</Layout>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Press Start 2P', cursive, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #fff;
  }

  button {
    font-family: inherit;
  }

  a {
    color: inherit;
  }
</style>
