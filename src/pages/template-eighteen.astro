---
import Layout from '../layouts/Layout.astro';
import SecurityHeader from '../components/template-eighteen/SecurityHeader.astro';
import SecurityHero from '../components/template-eighteen/SecurityHero.astro';
import SecurityFeatures from '../components/template-eighteen/SecurityFeatures.astro';
import SecurityServices from '../components/template-eighteen/SecurityServices.astro';
import SecurityFooter from '../components/template-eighteen/SecurityFooter.astro';
---

<Layout title="CyberGuard - Advanced Security Defense">
  <main>
    <SecurityHeader />
    <SecurityHero />
    <SecurityFeatures />
    <SecurityServices />
    <SecurityFooter />
  </main>
</Layout>

<style is:global>
  /* Reset and base styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    background: #0a0f1c;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #e2e8f0;
    background-color: #0a0f1c;
    line-height: 1.5;
    overflow-x: hidden;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
  }

  button {
    cursor: pointer;
    font-family: inherit;
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #0a0f1c;
  }

  ::-webkit-scrollbar-thumb {
    background: #1e293b;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #00f3ff;
  }
</style>
