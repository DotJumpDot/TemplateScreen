---
import Layout from '../layouts/Layout.astro';
import ChatSidebar from '../components/template-7/ChatSidebar.astro';
import ChatHeader from '../components/template-7/ChatHeader.astro';
import MessageList from '../components/template-7/MessageList.astro';
import ChatInput from '../components/template-7/ChatInput.astro';
---

<Layout title="AI Chat Interface - Template Seven">
  <div class="chat-layout">
    <ChatSidebar activeChatId="1" />
    <main class="chat-main">
      <ChatHeader />
      <MessageList />
      <div class="input-area">
        <ChatInput />
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background-color: #0f0f0f;
    color: #e5e5e5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    overflow: hidden; /* Prevent body scroll */
  }

  /* Scrollbar styling for the whole app */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: #404040;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #525252;
  }
</style>

<style>
  .chat-layout {
    display: flex;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }

  .chat-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #0f0f0f;
    position: relative;
  }

  .input-area {
    margin-top: auto;
    width: 100%;
  }
</style>
