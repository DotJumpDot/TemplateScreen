---
import Layout from '../layouts/Layout.astro';
import ItemShopHeader from '../components/template-12/ItemShopHeader.astro';
import ItemShopHero from '../components/template-12/ItemShopHero.astro';
import ItemGrid from '../components/template-12/ItemGrid.astro';
---

<Layout title="Game Item Shop - Template Twelve">
  <div class="item-shop-page">
    <ItemShopHeader />
    <ItemShopHero />
    <ItemGrid />
  </div>
</Layout>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }

  ::-webkit-scrollbar-thumb {
    background: rgba(236, 72, 153, 0.5);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgba(236, 72, 153, 0.7);
  }
</style>

<style>
  .item-shop-page {
    min-height: 100vh;
  }
</style>
