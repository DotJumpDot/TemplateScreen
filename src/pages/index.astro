---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Template Screen - Landing Page Templates">
  <main class="catalog">
    <header class="catalog-header">
      <h1 class="catalog-title">Template Screen</h1>
      <p class="catalog-subtitle">A collection of high-quality landing page templates to demonstrate various styles to customers</p>
    </header>

    <section class="templates-grid">
      <a href="/template-one" class="template-card corporate">
        <div class="card-preview">
          <div class="preview-header">
            <div class="preview-logo">â—†</div>
            <div class="preview-nav">
              <span class="preview-line"></span>
              <span class="preview-line"></span>
              <span class="preview-line"></span>
            </div>
          </div>
          <div class="preview-content">
            <div class="preview-title-line"></div>
            <div class="preview-text-line"></div>
            <div class="preview-button"></div>
          </div>
        </div>
        <div class="card-info">
          <h2 class="card-title">Corporate / Professional</h2>
          <p class="card-description">Clean, trustworthy, ready-to-implement business style with smooth animations</p>
          <span class="card-tag">Business</span>
        </div>
