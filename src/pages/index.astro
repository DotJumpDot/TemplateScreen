<style>
  .catalog {
    min-height: 100vh;
    padding: 80px 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .catalog-header {
    text-align: center;
    margin-bottom: 4rem;
    animation: fadeInDown 0.8s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .catalog-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: white;
    margin: 0 0 1rem 0;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .catalog-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .templates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 1600px;
    margin: 0 auto 4rem;
  }

  .template-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.6s ease-out, transform 0.2s ease-out, box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .template-card.retro {
    background: #16213e;
  }

  .template-card.modern {
    background: #0a0a14;
  }

  .template-card.shopping {
    background: white;
  }

  .template-card.dashboard {
    background: #0f172a;
  }

  .template-card.portfolio {
    background: #0f0f23;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .template-card:nth-child(1) {
    animation-delay: 0.1s;
  }

  .template-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .template-card:nth-child(3) {
    animation-delay: 0.3s;
  }

  .template-card:nth-child(4) {
    animation-delay: 0.4s;
  }

  .template-card:nth-child(5) {
    animation-delay: 0.5s;
  }

  .template-card:nth-child(6) {
    animation-delay: 0.6s;
  }

  .template-card:nth-child(7) {
    animation-delay: 0.7s;
  }

  .template-card:nth-child(8) {
    animation-delay: 0.8s;
  }

  .template-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .template-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .template-card:nth-child(1) {
    transition-delay: 0.1s;
  }

  .template-card:nth-child(2) {
    transition-delay: 0.2s;
  }

  .template-card:nth-child(3) {
    transition-delay: 0.3s;
  }

  .template-card:nth-child(4) {
    transition-delay: 0.4s;
  }

  .template-card:nth-child(5) {
    transition-delay: 0.5s;
  }

  .template-card:nth-child(6) {
    transition-delay: 0.6s;
  }

  .template-card:nth-child(7) {
    transition-delay: 0.7s;
  }

  .template-card:nth-child(8) {
    transition-delay: 0.8s;
  }

  .templates-grid:hover .template-card,
  .template-card:nth-child(1):hover,
  .template-card:nth-child(2):hover,
  .template-card:nth-child(3):hover,
  .template-card:nth-child(4):hover,
  .template-card:nth-child(5):hover,
  .template-card:nth-child(6):hover,
  .template-card:nth-child(7):hover,
  .template-card:nth-child(8):hover {
    transition-delay: 0s;
  }

  .template-card:nth-child(9):hover {
    transition-delay: 0s;
  }

  .template-card:nth-child(10):hover {
    transition-delay: 0s;
  }

