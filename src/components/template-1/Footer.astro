<style>
  .footer {
    background: #1a365d;
    color: white;
    padding: 60px 2rem 30px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .logo-icon {
    color: #63b3ed;
  }

  .footer-tagline {
    color: #a0aec0;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .link-group h4 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: #63b3ed;
  }

  .link-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-group li {
    margin-bottom: 0.75rem;
  }

  .link-group a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .link-group a:hover {
    color: white;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    text-align: center;
    color: #a0aec0;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
