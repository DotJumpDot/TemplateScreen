---

<aside class="tools-sidebar">
  <div class="tools-header">
    <h2 class="tools-title">AI Tools</h2>
    <button class="tools-toggle">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="#6b7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <div class="tools-grid">
    {tools.map(tool => (
      <button class="tool-card" style={`--tool-color: ${tool.color}`}>
        <div class="tool-icon">{tool.icon}</div>
        <div class="tool-info">
          <span class="tool-name">{tool.name}</span>
          <span class="tool-desc">{tool.description}</span>
        </div>
      </button>
    ))}
  </div>

  <div class="tools-footer">
    <div class="quick-actions">
      <h3 class="quick-title">Quick Actions</h3>
      <div class="action-list">
        <button class="action-item">
          <span>‚ö°</span>
