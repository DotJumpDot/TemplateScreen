  </div>
</section>

<style>
  .topup-hero {
    position: relative;
    min-height: 500px;
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 50%, #2d1b4e 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .glow-1 {
    width: 400px;
    height: 400px;
    background: #8b5cf6;
    top: -100px;
    right: -100px;
  }

  .glow-2 {
    width: 300px;
    height: 300px;
    background: #06b6d4;
    bottom: -50px;
    left: -50px;
  }

  .glow-3 {
    width: 250px;
    height: 250px;
    background: #ec4899;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(139, 92, 246, 0.2);
    border: 1px solid rgba(139, 92, 246, 0.4);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    margin-bottom: 1.5rem;
    color: #a78bfa;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 900;
    color: #ffffff;
    margin: 0 0 1rem 0;
    line-height: 1.1;
  }

  .gradient-text {
    background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.1rem;
    color: #a5b4fc;
    margin: 0 0 2rem 0;
  }

  .hero-search {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 16px;
    padding: 0.75rem 1rem;
    max-width: 500px;
    margin: 0 auto 2rem auto;
  }

  .hero-search input {
    flex: 1;
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 1rem;
    outline: none;
  }

  .hero-search input::placeholder {
    color: #6b7280;
  }

  .search-btn {
    background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
  }

  .search-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.4);
  }

  .hero-stats {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .stat-icon {
    font-size: 1.5rem;
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 700;
    color: #ffffff;
  }

  .stat-label {
    font-size: 0.8rem;
    color: #a5b4fc;
  }

  @media (max-width: 768px) {
    .topup-hero {
      padding: 3rem 1rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
