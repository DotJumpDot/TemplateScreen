    margin: 0;
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 0 2rem;
  }

  .project-card {
    background: #1a1a3e;
