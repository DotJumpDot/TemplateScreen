---

<section id="games" class="pixel-games">
  <div class="pixel-container">
    <h2 class="pixel-section-title">GAME ARCADE</h2>
    <div class="games-grid">
      {games.map((game, index) => (
        <div class="game-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="game-icon">{game.icon}</div>
          <h3 class="game-title">{game.title}</h3>
          <div class="game-info">
            <span class="game-tag">{game.genre}</span>
            <span class="game-players">{game.players}P</span>
          </div>
          <button class="game-btn">PLAY</button>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pixel-games {
    padding: 100px 2rem;
    background: #0f3460;
    position: relative;
  }

  .pixel-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .pixel-section-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 1.5rem;
    color: #f39c12;
    text-shadow: 3px 3px 0 #000;
    text-align: center;
    margin-bottom: 3rem;
    animation: glitch 0.5s infinite;
  }

  @keyframes glitch {
    0%, 90%, 100% { transform: translate(0); }
    92% { transform: translate(-3px, 3px); }
    94% { transform: translate(3px, -3px); }
    96% { transform: translate(-3px, -3px); }
    98% { transform: translate(3px, 3px); }
  }

  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .game-card {
    background: #1a1a2e;
    border: 4px solid #e74c3c;
    padding: 2rem;
    text-align: center;
    box-shadow: 6px 6px 0 #000;
    transition: all 0.2s steps(2);
    animation: fadeInUp 0.5s steps(10) both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .game-card:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 #000;
    background: #16213e;
  }

  .game-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: float 1s infinite alternate;
  }

  @keyframes float {
    from { transform: translateY(0); }
    to { transform: translateY(-10px); }
  }

  .game-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.8rem;
    color: #fff;
    text-shadow: 2px 2px 0 #000;
    margin: 0 0 1rem 0;
  }

  .game-info {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .game-tag,
  .game-players {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.5rem;
    padding: 0.5rem 0.75rem;
    border: 2px solid #f39c12;
  }

  .game-tag {
    background: #f39c12;
    color: #000;
  }

  .game-players {
    background: #3498db;
    color: #fff;
    border-color: #3498db;
  }

  .game-btn {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.6rem;
    background: #e74c3c;
    color: #fff;
    border: 3px solid #c0392b;
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    box-shadow: 3px 3px 0 #000;
    transition: all 0.2s steps(2);
    text-shadow: 1px 1px 0 #000;
  }

  .game-btn:hover {
    background: #c0392b;
    transform: translate(2px, 2px);
    box-shadow: 1px 1px 0 #000;
  }

  @media (max-width: 768px) {
    .games-grid {
      grid-template-columns: 1fr;
    }

    .pixel-section-title {
      font-size: 1rem;
    }
  }
</style>
