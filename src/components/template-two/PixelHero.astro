<section class="pixel-hero">
  <div class="pixel-content">
    <div class="pixel-title-container">
      <h1 class="pixel-title">LEVEL UP</h1>
      <p class="pixel-subtitle">YOUR GAMING EXPERIENCE</p>
    </div>
    <div class="pixel-characters">
      <div class="pixel-char char-1">◉</div>
      <div class="pixel-char char-2">◈</div>
      <div class="pixel-char char-3">◆</div>
    </div>
    <button class="pixel-start-btn">INSERT COIN</button>
  </div>
  <div class="pixel-grid">
    <div class="grid-row"></div>
    <div class="grid-row"></div>
    <div class="grid-row"></div>
  </div>
</section>

<style>
  .pixel-hero {
    min-height: 100vh;
    background: #16213e;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 2rem 80px;
    position: relative;
    overflow: hidden;
  }

  .pixel-content {
    text-align: center;
    position: relative;
    z-index: 10;
  }

  .pixel-title-container {
    animation: fadeInUp 0.8s steps(20) both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pixel-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 2.5rem;
    color: #f39c12;
    text-shadow: 4px 4px 0 #000;
    margin: 0 0 1.5rem 0;
    animation: glitch 0.3s infinite;
  }

  @keyframes glitch {
    0%, 90%, 100% { transform: translate(0); }
    92% { transform: translate(-2px, 2px); }
    94% { transform: translate(2px, -2px); }
    96% { transform: translate(-2px, -2px); }
    98% { transform: translate(2px, 2px); }
  }

  .pixel-subtitle {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.9rem;
    color: #e74c3c;
    text-shadow: 2px 2px 0 #000;
    margin: 0 0 3rem 0;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50%, 100% { opacity: 1; }
    51%, 99% { opacity: 0; }
  }

  .pixel-characters {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .pixel-char {
    font-size: 4rem;
    animation: bounce 0.5s infinite alternate;
  }

  .char-1 {
    color: #3498db;
    animation-delay: 0s;
  }

  .char-2 {
    color: #e74c3c;
    animation-delay: 0.1s;
  }

  .char-3 {
    color: #2ecc71;
    animation-delay: 0.2s;
  }

  @keyframes bounce {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-20px);
    }
  }

  .pixel-start-btn {
    font-family: 'Press Start 2P', cursive;
    font-size: 0.9rem;
    background: #27ae60;
    color: #fff;
    border: 4px solid #2ecc71;
    padding: 1.5rem 3rem;
    cursor: pointer;
    box-shadow: 6px 6px 0 #000;
    transition: all 0.2s steps(2);
    text-shadow: 2px 2px 0 #000;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .pixel-start-btn:hover {
    background: #2ecc71;
    transform: translate(3px, 3px);
    box-shadow: 3px 3px 0 #000;
  }

  .pixel-grid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    opacity: 0.1;
  }

  .grid-row {
    position: absolute;
    width: 100%;
    height: 2px;
    background: #f39c12;
  }

  .grid-row:nth-child(1) { top: 25%; }
  .grid-row:nth-child(2) { top: 50%; }
  .grid-row:nth-child(3) { top: 75%; }

  @media (max-width: 768px) {
    .pixel-title {
      font-size: 1.5rem;
    }

    .pixel-subtitle {
      font-size: 0.6rem;
    }

    .pixel-char {
      font-size: 3rem;
    }

    .pixel-start-btn {
      font-size: 0.7rem;
      padding: 1rem 2rem;
    }
  }
</style>
