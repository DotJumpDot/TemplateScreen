---
const { activePath = "dashboard" } = Astro.props;

const menuItems = [
  { icon: "üìä", label: "Dashboard", path: "dashboard" },
  { icon: "üë•", label: "Users", path: "users", badge: "2.4k" },
  { icon: "üì¶", label: "Products", path: "products" },
  { icon: "üí≥", label: "Orders", path: "orders", badge: "12" },
  { icon: "üìà", label: "Analytics", path: "analytics" },
  { icon: "üìÅ", label: "Files", path: "files" },
  { icon: "‚öôÔ∏è", label: "Settings", path: "settings" },
  { icon: "üîí", label: "Security", path: "security" },
];
---

<aside class="dashboard-sidebar">
  <div class="sidebar-brand">
    <div class="brand-logo">
      <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="3" y="3" width="18" height="18" rx="2" stroke="#6366f1" stroke-width="2"/>
        <path d="M3 9h18M9 21V9" stroke="#6366f1" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <span class="brand-name">AdminPanel</span>
    </div>
    <button class="collapse-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="#a3a3a3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <nav class="sidebar-nav">
    <div class="nav-section">
      <span class="nav-label">Main Menu</span>
      <div class="nav-items">
        {menuItems.map(item => (
          <a href={`/${item.path}`} class={`nav-item ${item.path === activePath ? 'active' : ''}`}>
            <span class="nav-icon">{item.icon}</span>
            <span class="nav-label-text">{item.label}</span>
            {item.badge && <span class="nav-badge">{item.badge}</span>}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <div class="sidebar-footer">
    <div class="footer-card">
      <div class="footer-icon">üöÄ</div>
      <div class="footer-content">
        <span class="footer-title">Upgrade to Pro</span>
        <span class="footer-desc">Get more features</span>
      </div>
      <button class="footer-btn">‚Üí</button>
    </div>
    <div class="user-info">
      <div class="user-avatar">üë§</div>
      <div class="user-details">
        <span class="user-name">John Doe</span>
        <span class="user-email">john@admin.com</span>
      </div>
    </div>
  </div>
</aside>

<style>
  .dashboard-sidebar {
    width: 260px;
    height: 100vh;
    background-color: #0f0f0f;
    border-right: 1px solid #262626;
    display: flex;
    flex-direction: column;
    padding: 1.5rem 1rem;
    color: #e5e5e5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .sidebar-brand {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .brand-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: #fff;
  }

  .collapse-btn {
    background: transparent;
    border: 1px solid #262626;
    border-radius: 8px;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #a3a3a3;
  }

  .collapse-btn:hover {
    background-color: #262626;
    color: #e5e5e5;
  }

  .sidebar-nav {
    flex: 1;
    overflow-y: auto;
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
    display: block;
  }

  .nav-items {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: #a3a3a3;
    transition: all 0.2s;
    position: relative;
  }

  .nav-item:hover {
    background-color: #262626;
    color: #e5e5e5;
  }

  .nav-item.active {
    background-color: #6366f1;
    color: #fff;
  }

  .nav-icon {
    font-size: 1.1rem;
  }

  .nav-label-text {
    flex: 1;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .nav-badge {
    background-color: #6366f1;
    color: #fff;
    font-size: 0.7rem;
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 600;
  }

  .nav-item.active .nav-badge {
    background-color: #fff;
    color: #6366f1;
  }

  .sidebar-footer {
    border-top: 1px solid #262626;
    padding-top: 1.5rem;
  }

  .footer-card {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 12px;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer-icon {
    font-size: 1.5rem;
  }

  .footer-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .footer-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
  }

  .footer-desc {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    width: 28px;
    height: 28px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #fff;
    font-size: 1rem;
  }

  .footer-btn:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .user-avatar {
    width: 40px;
    height: 40px;
    background-color: #262626;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .user-details {
    display: flex;
    flex-direction: column;
  }

  .user-name {
    font-size: 0.85rem;
    font-weight: 600;
    color: #e5e5e5;
  }

  .user-email {
    font-size: 0.75rem;
    color: #737373;
  }

  /* Custom scrollbar */
  .sidebar-nav::-webkit-scrollbar {
    width: 4px;
  }

  .sidebar-nav::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-nav::-webkit-scrollbar-thumb {
    background: #404040;
    border-radius: 4px;
  }
</style>
