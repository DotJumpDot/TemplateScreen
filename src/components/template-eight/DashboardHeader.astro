<header class="dashboard-header">
  <div class="header-left">
    <button class="menu-toggle">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 12h18M3 6h18M3 18h18" stroke="#e5e5e5" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
    <div class="breadcrumb">
      <span class="breadcrumb-item">Dashboard</span>
      <span class="breadcrumb-separator">/</span>
      <span class="breadcrumb-item active">Overview</span>
    </div>
  </div>

  <div class="header-right">
    <div class="search-box">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="11" cy="11" r="8" stroke="#737373" stroke-width="2"/>
        <path d="m21 21-4.35-4.35" stroke="#737373" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <input type="text" placeholder="Search..." />
      <kbd>âŒ˜</kbd> <kbd>K</kbd>
    </div>

    <button class="header-btn notification-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke="#e5e5e5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke="#e5e5e5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span class="badge">3</span>
    </button>

    <button class="header-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="1" stroke="#e5e5e5" stroke-width="2"/>
        <circle cx="19" cy="12" r="1" stroke="#e5e5e5" stroke-width="2"/>
        <circle cx="5" cy="12" r="1" stroke="#e5e5e5" stroke-width="2"/>
      </svg>
    </button>

    <div class="header-divider"></div>

    <button class="header-btn profile-btn">
      <div class="avatar">
        <span>JD</span>
      </div>
    </button>
  </div>
</header>

<style>
  .dashboard-header {
    height: 64px;
    background-color: #0f0f0f;
    border-bottom: 1px solid #262626;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
    color: #e5e5e5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .menu-toggle {
    background: transparent;
    border: none;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    cursor: pointer;
    color: #a3a3a3;
  }

  .menu-toggle:hover {
    background-color: #262626;
    color: #e5e5e5;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .breadcrumb-item {
    color: #737373;
  }

  .breadcrumb-item.active {
    color: #e5e5e5;
    font-weight: 500;
  }

  .breadcrumb-separator {
    color: #525252;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #171717;
    border: 1px solid #262626;
    border-radius: 8px;
    padding: 0.5rem 0.75rem;
    width: 280px;
  }

  .search-box input {
    flex: 1;
    background: transparent;
    border: none;
      color: #e5e5e5;
    font-size: 0.9rem;
    outline: none;
  }

  .search-box input::placeholder {
    color: #737373;
  }

  kbd {
    background-color: #262626;
    color: #a3a3a3;
    font-size: 0.7rem;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: inherit;
    border: 1px solid #404040;
  }

  .header-btn {
    background: transparent;
    border: none;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    cursor: pointer;
    color: #e5e5e5;
    position: relative;
  }

  .header-btn:hover {
    background-color: #262626;
  }

  .header-btn.notification-btn .badge {
    position: absolute;
    top: 6px;
    right: 6px;
    background-color: #ef4444;
    color: #fff;
    font-size: 0.65rem;
    font-weight: 600;
    padding: 2px 5px;
    border-radius: 10px;
    min-width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-divider {
    width: 1px;
    height: 24px;
    background-color: #262626;
  }

  .profile-btn .avatar {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
  }
</style>
