---
const quickStats = [
  {
    label: "Total Revenue",
    value: "$84,254",
    change: "+12.5%",
    isPositive: true,
    icon: "dollar-sign",
    color: "emerald"
  },
  {
    label: "Active Projects",
    value: "24",
    change: "+8",
    isPositive: true,
    icon: "briefcase",
    color: "blue"
  },
  {
    label: "Team Members",
    value: "156",
    change: "+3",
    isPositive: true,
    icon: "users",
    color: "purple"
  },
  {
    label: "Completion Rate",
    value: "94.2%",
    change: "-2.1%",
    isPositive: false,
    icon: "trending-up",
    color: "amber"
  }
];
---

<section class="fresh-stats">
  <div class="stats-grid">
    {quickStats.map(stat => (
      <div class={`stat-card color-${stat.color}`}>
        <div class="stat-header">
          <div class="stat-icon-wrapper">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              {stat.icon === 'dollar-sign' && <><line x1="12" y1="1" x2="12" y2="23" /><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" /></>}
              {stat.icon === 'briefcase' && <><rect x="2" y="7" width="20" height="14" rx="2" ry="2" /><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" /></>}
              {stat.icon === 'users' && <><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></>}
              {stat.icon === 'trending-up' && <><polyline points="23 6 13.5 15.5 8.5 10.5 1 18" /><polyline points="17 6 23 6 23 12" /></>}
            </svg>
          </div>
          <span class={`stat-change ${stat.isPositive ? 'positive' : 'negative'}`}>
            {stat.change}
          </span>
        </div>
        <div class="stat-content">
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .fresh-stats {
    padding: 2rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .stat-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid #f1f5f9;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .stat-card.color-emerald {
    border-left: 4px solid #10b981;
  }

  .stat-card.color-emerald .stat-icon-wrapper {
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    color: #10b981;
  }

  .stat-card.color-blue {
    border-left: 4px solid #3b82f6;
  }

  .stat-card.color-blue .stat-icon-wrapper {
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    color: #3b82f6;
  }

  .stat-card.color-purple {
    border-left: 4px solid #8b5cf6;
  }

  .stat-card.color-purple .stat-icon-wrapper {
    background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%);
    color: #8b5cf6;
  }

  .stat-card.color-amber {
    border-left: 4px solid #f59e0b;
  }

  .stat-card.color-amber .stat-icon-wrapper {
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
    color: #f59e0b;
  }

  .stat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.25rem;
  }

  .stat-icon-wrapper {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stat-change {
    font-size: 0.8rem;
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
  }

  .stat-change.positive {
    background: #ecfdf5;
    color: #10b981;
  }

  .stat-change.negative {
    background: #fef2f2;
    color: #ef4444;
  }

  .stat-content {
    text-align: right;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 800;
    color: #0f172a;
    letter-spacing: -0.5px;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>
