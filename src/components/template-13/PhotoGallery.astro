---
const categories = ["Portrait", "Landscape", "Architecture", "Street"];

const images = [
  { width: "large", height: 400 },
  { width: "medium", height: 300 },
  { width: "medium", height: 300 },
  { width: "large", height: 400 },
  { width: "medium", height: 300 },
  { width: "medium", height: 300 },
];
---

<section class="photo-gallery" id="work">
  <div class="gallery-header">
    <h2 class="gallery-title">Selected Works</h2>
    <div class="gallery-filters">
      {categories.map((cat, index) => (
        <button class={`filter-btn ${index === 0 ? 'active' : ''}`}>{cat}</button>
      ))}
    </div>
  </div>
  <div class="gallery-grid">
    {images.map((img, index) => (
      <div class={`gallery-item ${img.width}`} style={`animation-delay: ${index * 0.1}s`}>
        <div class="image-placeholder"></div>
        <div class="image-overlay">
          <span class="overlay-text">View Project</span>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .photo-gallery {
    padding: 100px 6rem;
    background: #fff;
  }

  .gallery-header {
    margin-bottom: 4rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .gallery-title {
    font-size: 2.5rem;
    font-weight: 200;
    color: #000;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .gallery-filters {
    display: flex;
    gap: 2rem;
  }

  .filter-btn {
    background: none;
    border: none;
    font-size: 0.9rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    color: #999;
    cursor: pointer;
    padding: 0.5rem 0;
    position: relative;
    transition: all 0.3s ease;
  }

  .filter-btn::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: #000;
    transition: width 0.3s ease;
  }

  .filter-btn:hover,
  .filter-btn.active {
    color: #000;
  }

  .filter-btn.active::after {
    width: 100%;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    cursor: pointer;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gallery-item.large {
    grid-column: span 1;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0 0%, #e8e8e8 100%);
    transition: all 0.5s ease;
  }

  .gallery-item:hover .image-placeholder {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.4s ease;
  }

  .gallery-item:hover .image-overlay {
    opacity: 1;
  }

  .overlay-text {
    color: #fff;
    font-size: 0.9rem;
    font-weight: 300;
    letter-spacing: 0.15em;
    transform: translateY(20px);
    transition: all 0.4s ease;
  }

  .gallery-item:hover .overlay-text {
    transform: translateY(0);
  }

  @media (max-width: 1024px) {
    .photo-gallery {
      padding: 80px 2rem;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .gallery-filters {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
