---
const properties = [
  {
    price: "$4,500,000",
    location: "Beverly Hills, CA",
    beds: "5",
    baths: "6",
    sqft: "6,200"
  },
  {
    price: "$7,200,000",
    location: "Manhattan, NY",
    beds: "4",
    baths: "4",
    sqft: "4,800"
  },
  {
    price: "$3,800,000",
    location: "Miami Beach, FL",
    beds: "4",
    baths: "5",
    sqft: "5,100"
  }
];
---

<section class="estate-properties" id="properties">
  <div class="properties-header">
    <h2 class="properties-title">Featured Properties</h2>
    <p class="properties-subtitle">Handpicked luxury residences for discerning buyers</p>
  </div>
  <div class="properties-grid">
    {properties.map((property, index) => (
      <div class="property-card" style={`animation-delay: ${index * 0.2}s`}>
        <div class="property-image">
          <div class="image-placeholder"></div>
          <div class="property-badge">Featured</div>
        </div>
        <div class="property-details">
          <div class="property-price">{property.price}</div>
          <div class="property-location">{property.location}</div>
          <div class="property-specs">
            <div class="spec-item">
              <span class="spec-icon">üõèÔ∏è</span>
              <span>{property.beds} Beds</span>
            </div>
            <div class="spec-item">
              <span class="spec-icon">üöø</span>
              <span>{property.baths} Baths</span>
            </div>
            <div class="spec-item">
              <span class="spec-icon">üìê</span>
              <span>{property.sqft} sqft</span>
            </div>
          </div>
          <button class="view-details">View Details</button>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .estate-properties {
    padding: 100px 3rem;
    background: #0a0a0a;
  }

  .properties-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .properties-title {
    font-size: 3rem;
    font-weight: 300;
    color: #fff;
    letter-spacing: -0.02em;
    margin: 0 0 1rem 0;
  }

  .properties-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 300;
    margin: 0;
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .property-card {
    background: linear-gradient(135deg, #1a1a1a 0%, #121212 100%);
    border: 1px solid rgba(212, 175, 55, 0.1);
    overflow: hidden;
    transition: all 0.5s ease;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .property-card:hover {
    transform: translateY(-10px);
    border-color: rgba(212, 175, 55, 0.3);
    box-shadow: 0 30px 80px rgba(212, 175, 55, 0.1);
  }

  .property-image {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    transition: all 0.5s ease;
  }

  .property-card:hover .image-placeholder {
    transform: scale(1.05);
  }

  .property-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: linear-gradient(135deg, #d4af37 0%, #b8960c 100%);
    color: #121212;
    padding: 0.5rem 1rem;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
  }

  .property-details {
    padding: 2rem;
  }

  .property-price {
    font-size: 1.8rem;
    font-weight: 700;
    color: #d4af37;
    margin-bottom: 0.5rem;
  }

  .property-location {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .property-specs {
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 1.5rem;
  }

  .spec-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .spec-icon {
    font-size: 1rem;
  }

  .view-details {
    width: 100%;
    background: transparent;
    color: #d4af37;
    border: 1px solid rgba(212, 175, 55, 0.3);
    padding: 1rem;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .view-details:hover {
    background: #d4af37;
    color: #121212;
  }

  @media (max-width: 1024px) {
    .estate-properties {
      padding: 80px 2rem;
    }

    .properties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .properties-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
