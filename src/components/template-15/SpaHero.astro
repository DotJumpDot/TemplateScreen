<style>
  .spa-hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 50%, #f0fdfa 100%);
    position: relative;
    overflow: hidden;
    padding: 120px 3rem 80px;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .nature-element {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
    animation: float 15s ease-in-out infinite;
  }

  .element-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, #5a8f7e 0%, #7bb3a3 100%);
    top: -100px;
    right: -100px;
    animation-delay: 0s;
  }

  .element-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #a7d8c9 0%, #c8e6d3 100%);
    bottom: -50px;
    left: -50px;
    animation-delay: 5s;
  }

  .element-3 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #f6e8e8 0%, #fce8e8 100%);
    top: 50%;
    left: 30%;
    animation-delay: 10s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.05); }
    66% { transform: translate(-20px, 20px) scale(0.95); }
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 10;
    max-width: 800px;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(90, 143, 126, 0.1);
    border: 1px solid rgba(90, 143, 126, 0.2);
    padding: 0.6rem 1.5rem;
    margin-bottom: 2rem;
    border-radius: 50px;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-badge span {
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: #5a8f7e;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 300;
    line-height: 1.2;
    color: #1e3a32;
    margin: 0 0 1.5rem 0;
    animation: fadeInUp 0.8s ease-out 0.15s both;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #64748b;
    margin: 0 0 3rem 0;
    font-weight: 300;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .hero-cta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out 0.45s both;
  }

  .primary-button {
    background: linear-gradient(135deg, #5a8f7e 0%, #7bb3a3 100%);
    color: #fff;
    border: none;
    padding: 1.25rem 2.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(90, 143, 126, 0.25);
  }

  .primary-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(90, 143, 126, 0.35);
  }

  .secondary-button {
    background: transparent;
    color: #5a8f7e;
    border: 2px solid rgba(90, 143, 126, 0.3);
    padding: 1.25rem 2.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.4s ease;
  }

  .secondary-button:hover {
    background: rgba(90, 143, 126, 0.1);
    border-color: #5a8f7e;
  }

  .hero-features {
    display: flex;
    justify-content: center;
    gap: 3rem;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #64748b;
    font-weight: 400;
  }

  .feature-icon {
    font-size: 1.3rem;
  }

  @media (max-width: 1024px) {
    .hero-title {
      font-size: 3rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-cta {
      flex-direction: column;
    }

    .hero-features {
      flex-direction: column;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .spa-hero {
      padding: 120px 1.5rem 80px;
    }
  }
</style>
