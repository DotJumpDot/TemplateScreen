  {
    icon: "strategy",
    title: "Strategic Consulting",
    description: "Comprehensive business strategy development to drive growth and competitive advantage in your market.",
    features: ["Market Analysis", "Business Planning", "Growth Strategy", "Risk Assessment"],
    color: "#1e40af"
  },
  {
    icon: "digital",
    title: "Digital Transformation",
    description: "End-to-end digital solutions that modernize operations and enhance customer experiences.",
    features: ["Process Automation", "Cloud Migration", "Data Analytics", "AI Integration"],
    color: "#7c3aed"
  },
  {
    icon: "tech",
    title: "Technology Solutions",
    description: "Custom software development and IT infrastructure designed for your unique business needs.",
    features: ["Custom Development", "System Integration", "Cybersecurity", "IT Consulting"],
    color: "#059669"
  },
  {
    icon: "finance",
    title: "Financial Advisory",
    description: "Expert financial guidance to optimize performance and maximize shareholder value.",
    features: ["M&A Advisory", "Valuation Services", "Capital Structure", "Due Diligence"],
    color: "#dc2626"
  },
  {
    icon: "operations",
    title: "Operations Excellence",
    description: "Streamline processes and improve efficiency across your entire organization.",
    features: ["Process Optimization", "Supply Chain", "Quality Management", "Cost Reduction"],
    color: "#ea580c"
  },
  {
    icon: "talent",
    title: "Talent & HR Solutions",
    description: "Build high-performing teams with our comprehensive human capital services.",
    features: ["Executive Search", "HR Strategy", "Leadership Development", "Culture Transformation"],
    color: "#0891b2"
  }
