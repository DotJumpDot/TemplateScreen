---
const offices = [
  { city: "New York", address: "350 Fifth Avenue, Suite 7200", phone: "+1 (212) 555-0100", email: "ny@apexsolutions.com" },
  { city: "London", address: "30 St Mary Axe, Floor 28", phone: "+44 20 7555 0100", email: "london@apexsolutions.com" },
  { city: "Singapore", address: "1 Raffles Place, Tower 2 #35-01", phone: "+65 6555 0100", email: "sg@apexsolutions.com" }
];

const contactMethods = [
  {
    icon: "phone",
    title: "Call Us",
    description: "Speak directly with our team",
    value: "+1 (800) 555-0199",
    action: "tel:+18005550199"
  },
  {
    icon: "email",
    title: "Email Us",
    description: "Send us your inquiry",
    value: "contact@apexsolutions.com",
    action: "mailto:contact@apexsolutions.com"
  },
  {
    icon: "calendar",
    title: "Schedule Meeting",
    description: "Book a consultation",
    value: "Book Online",
    action: "#schedule"
  }
];

const iconPaths: Record<string, string> = {
  phone: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
  email: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  calendar: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
};
---

<section class="corporate-contact" id="contact">
  <div class="contact-container">
    <div class="contact-header">
      <span class="section-label">Contact Us</span>
      <h2 class="section-title">Let's Start a Conversation</h2>
      <p class="section-subtitle">
        Ready to transform your business? Get in touch with our team of experts today.
      </p>
    </div>

    <div class="contact-content">
      <div class="contact-form-section">
        <form class="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input type="text" id="firstName" name="firstName" placeholder="John" required />
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input type="text" id="lastName" name="lastName" placeholder="Doe" required />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" placeholder="john@company.com" required />
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone" placeholder="+1 (555) 000-0000" />
            </div>
          </div>
          <div class="form-group">
            <label for="company">Company Name</label>
            <input type="text" id="company" name="company" placeholder="Your Company" />
          </div>
          <div class="form-group">
            <label for="service">Service Interest</label>
            <select id="service" name="service">
              <option value="">Select a service</option>
              <option value="strategy">Strategic Consulting</option>
              <option value="digital">Digital Transformation</option>
              <option value="technology">Technology Solutions</option>
              <option value="finance">Financial Advisory</option>
              <option value="operations">Operations Excellence</option>
              <option value="talent">Talent & HR Solutions</option>
            </select>
          </div>
          <div class="form-group">
            <label for="message">How can we help?</label>
            <textarea id="message" name="message" rows="4" placeholder="Tell us about your project or inquiry..."></textarea>
          </div>
          <button type="submit" class="submit-button">
            Send Message
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
            </svg>
          </button>
        </form>
      </div>

      <div class="contact-info-section">
        <div class="contact-methods">
          {contactMethods.map((method, index) => (
            <a href={method.action} class="contact-method" style={`animation-delay: ${index * 0.1}s`}>
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d={iconPaths[method.icon]} />
                </svg>
              </div>
              <div class="method-info">
                <span class="method-title">{method.title}</span>
                <span class="method-description">{method.description}</span>
                <span class="method-value">{method.value}</span>
              </div>
            </a>
          ))}
        </div>

        <div class="offices-section">
          <h3 class="offices-title">Our Global Offices</h3>
          <div class="offices-grid">
            {offices.map((office, index) => (
              <div class="office-card" style={`animation-delay: ${index * 0.1}s`}>
                <h4 class="office-city">{office.city}</h4>
                <p class="office-address">{office.address}</p>
                <p class="office-phone">{office.phone}</p>
                <a href={`mailto:${office.email}`} class="office-email">{office.email}</a>
              </div>
            ))}
          </div>
        </div>

        <div class="response-time">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          <span>Average response time: <strong>Under 24 hours</strong></span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .corporate-contact {
    padding: 120px 2rem;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }

  .contact-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    color: #1e40af;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
  }

  .contact-form-section {
    background: white;
    border-radius: 24px;
    padding: 3rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
    border: 1px solid #e2e8f0;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #0f172a;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem 1.25rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 1rem;
    color: #0f172a;
    background: #f8fafc;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #3b82f6;
    background: white;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #94a3b8;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
    color: white;
    border: none;
    padding: 1.25rem 2rem;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(30, 64, 175, 0.25);
    margin-top: 1rem;
  }

  .submit-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(30, 64, 175, 0.35);
  }

  .contact-info-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    text-decoration: none;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .contact-method:hover {
    border-color: #3b82f6;
    box-shadow: 0 10px 30px rgba(30, 64, 175, 0.1);
    transform: translateX(5px);
  }

  .method-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .method-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .method-title {
    font-size: 0.85rem;
    color: #64748b;
    font-weight: 500;
  }

  .method-description {
    font-size: 0.8rem;
    color: #94a3b8;
  }

  .method-value {
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
  }

  .offices-section {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    border: 1px solid #e2e8f0;
  }

  .offices-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
  }

  .offices-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .office-card {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #f1f5f9;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .office-card:last-child {
    padding-bottom: 0;
    border-bottom: none;
  }

  .office-city {
    font-size: 1rem;
    font-weight: 600;
    color: #1e40af;
    margin: 0 0 0.5rem 0;
  }

  .office-address,
  .office-phone {
    font-size: 0.9rem;
    color: #64748b;
    margin: 0 0 0.25rem 0;
  }

  .office-email {
    font-size: 0.85rem;
    color: #3b82f6;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .office-email:hover {
    color: #1e40af;
  }

  .response-time {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #f0fdf4, #dcfce7);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    color: #166534;
    font-size: 0.9rem;
  }

  .response-time svg {
    color: #22c55e;
  }

  @media (max-width: 1024px) {
    .contact-content {
      grid-template-columns: 1fr;
    }

    .contact-form-section {
      padding: 2rem;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form-section {
      padding: 1.5rem;
    }
  }
</style>