---
const team = [
  {
    name: "Sarah Mitchell",
    role: "Chief Executive Officer",
    bio: "20+ years of executive leadership in Fortune 500 companies",
    initials: "SM"
  },
  {
    name: "David Chen",
    role: "Chief Technology Officer",
    bio: "Former VP of Engineering at leading tech companies",
    initials: "DC"
  },
  {
    name: "Emily Rodriguez",
    role: "Chief Strategy Officer",
    bio: "McKinsey alum with expertise in digital transformation",
    initials: "ER"
  },
  {
    name: "Michael Thompson",
    role: "Chief Financial Officer",
    bio: "Investment banking background with $10B+ in deals",
    initials: "MT"
  },
  {
    name: "Lisa Wang",
    role: "Chief Operations Officer",
    bio: "Operations expert scaling teams across 30+ countries",
    initials: "LW"
  },
  {
    name: "James Anderson",
    role: "Chief Marketing Officer",
    bio: "Award-winning marketer with global brand experience",
    initials: "JA"
  }
];

const stats = [
  { value: "200+", label: "Team Members" },
  { value: "50+", label: "Countries" },
  { value: "25+", label: "Industries" },
  { value: "500+", label: "Projects" }
];
---

<section class="corporate-team" id="team">
  <div class="team-container">
    <div class="team-header">
      <span class="section-label">Our Team</span>
      <h2 class="section-title">Leadership That Drives Results</h2>
      <p class="section-subtitle">
        Meet the experienced professionals guiding our mission to transform businesses worldwide.
      </p>
    </div>

    <div class="team-stats">
      {stats.map((stat, index) => (
        <div class="stat-card" style={`animation-delay: ${index * 0.1}s`}>
          <span class="stat-value">{stat.value}</span>
          <span class="stat-label">{stat.label}</span>
        </div>
      ))}
    </div>

    <div class="team-grid">
      {team.map((member, index) => (
        <div class="team-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="member-avatar">
            <div class="avatar-placeholder">
              <span class="avatar-initials">{member.initials}</span>
            </div>
            <div class="avatar-ring"></div>
          </div>
          <div class="member-info">
            <h3 class="member-name">{member.name}</h3>
            <span class="member-role">{member.role}</span>
            <p class="member-bio">{member.bio}</p>
          </div>
          <div class="member-social">
            <a href="#" class="social-link" aria-label="LinkedIn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a href="#" class="social-link" aria-label="Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.564-2.005.974-3.127 1.195a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="team-cta">
      <div class="cta-content">
        <h3 class="cta-title">Join Our Growing Team</h3>
        <p class="cta-text">We're always looking for talented individuals who share our passion for excellence.</p>
      </div>
      <a href="#careers" class="cta-button">
        View Open Positions
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .corporate-team {
    padding: 120px 2rem;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  }

  .team-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .team-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    color: #1e40af;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .team-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 5rem;
  }

  .stat-card {
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #64748b;
    font-weight: 500;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .team-card {
    background: white;
    border-radius: 24px;
    padding: 2.5rem;
    text-align: center;
    border: 1px solid #e2e8f0;
    transition: all 0.4s ease;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .team-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.1);
    border-color: transparent;
  }

  .member-avatar {
    position: relative;
    width: 100px;
    height: 100px;
    margin: 0 auto 1.5rem;
  }

  .avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .avatar-initials {
    font-size: 2rem;
    font-weight: 700;
    color: white;
  }

  .avatar-ring {
    position: absolute;
    inset: -5px;
    border: 2px dashed #cbd5e1;
    border-radius: 50%;
    animation: spin 20s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .member-info {
    margin-bottom: 1.5rem;
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 0.25rem 0;
  }

  .member-role {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1e40af;
    margin-bottom: 0.75rem;
  }

  .member-bio {
    font-size: 0.9rem;
    color: #64748b;
    line-height: 1.5;
    margin: 0;
  }

  .member-social {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #f1f5f9;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #1e40af;
    color: white;
    transform: translateY(-3px);
  }

  .team-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: 2px solid #e2e8f0;
    border-radius: 24px;
    padding: 3rem 4rem;
  }

  .cta-content {
    max-width: 500px;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 0.5rem 0;
  }

  .cta-text {
    font-size: 1rem;
    color: #64748b;
    margin: 0;
    line-height: 1.6;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(30, 64, 175, 0.25);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(30, 64, 175, 0.35);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-stats {
      flex-wrap: wrap;
      gap: 2rem;
    }

    .team-cta {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
      padding: 2.5rem 2rem;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
    }

    .team-stats {
      gap: 1.5rem;
    }

    .stat-value {
      font-size: 2rem;
    }
  }
</style>