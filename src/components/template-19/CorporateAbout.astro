---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Building Tomorrow's Success Today",
  subtitle = "For over 25 years, we've been at the forefront of business innovation, helping companies navigate digital transformation and achieve sustainable growth."
} = Astro.props;

const milestones = [
  { year: "1999", title: "Founded", description: "Started with a vision to transform businesses" },
  { year: "2005", title: "Global Expansion", description: "Opened offices in 10 countries" },
  { year: "2012", title: "Digital Pioneer", description: "Launched innovative digital solutions" },
  { year: "2020", title: "Industry Leader", description: "Recognized as top consulting firm" },
  { year: "2024", title: "Future Ready", description: "500+ successful projects delivered" }
];

const values = [
  {
    icon: "üéØ",
    title: "Excellence",
    description: "We pursue the highest standards in everything we do, delivering exceptional results that exceed expectations."
  },
  {
    icon: "ü§ù",
    title: "Integrity",
    description: "We build trust through transparency, honesty, and ethical business practices in all our relationships."
  },
  {
    icon: "üí°",
    title: "Innovation",
    description: "We embrace change and continuously evolve our solutions to stay ahead of industry trends."
  },
  {
    icon: "üåç",
    title: "Impact",
    description: "We measure success by the positive difference we make for our clients and communities."
  }
];
---

<section class="corporate-about" id="about">
  <div class="about-container">
    <div class="about-header">
      <span class="section-label">About Us</span>
      <h2 class="section-title">{title}</h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>

    <div class="about-content">
      <div class="about-story">
        <div class="story-image">
          <div class="image-placeholder">
            <div class="placeholder-content">
              <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="200" height="200" rx="20" fill="url(#aboutGrad)"/>
                <circle cx="100" cy="70" r="30" fill="white" fill-opacity="0.3"/>
                <rect x="50" y="110" width="100" height="60" rx="10" fill="white" fill-opacity="0.3"/>
                <defs>
                  <linearGradient id="aboutGrad" x1="0" y1="0" x2="200" y2="200">
                    <stop stop-color="#1e40af"/>
                    <stop offset="1" stop-color="#3b82f6"/>
                  </linearGradient>
                </defs>
              </svg>
            </div>
          </div>
          <div class="experience-badge">
            <span class="badge-number">25+</span>
            <span class="badge-text">Years of Excellence</span>
          </div>
        </div>
        <div class="story-content">
          <h3 class="story-title">Our Story</h3>
          <p class="story-text">
            Founded in 1999, Apex Solutions began with a simple mission: to help businesses thrive in an increasingly complex world. What started as a small consulting firm has grown into a global enterprise, serving clients across 50+ countries.
          </p>
          <p class="story-text">
            Our team of 200+ experts brings together diverse perspectives and deep industry knowledge to deliver transformative solutions. We believe in building lasting partnerships, not just completing projects.
          </p>
          <div class="story-highlights">
            <div class="highlight">
              <span class="highlight-value">200+</span>
              <span class="highlight-label">Expert Team</span>
            </div>
            <div class="highlight">
              <span class="highlight-value">50+</span>
              <span class="highlight-label">Countries</span>
            </div>
            <div class="highlight">
              <span class="highlight-value">$2B+</span>
              <span class="highlight-label">Revenue Generated</span>
            </div>
          </div>
        </div>
      </div>

      <div class="timeline-section">
        <h3 class="timeline-title">Our Journey</h3>
        <div class="timeline">
          {milestones.map((milestone, index) => (
            <div class="timeline-item" style={`animation-delay: ${index * 0.15}s`}>
              <div class="timeline-marker">
                <span class="marker-year">{milestone.year}</span>
              </div>
              <div class="timeline-content">
                <h4 class="milestone-title">{milestone.title}</h4>
                <p class="milestone-description">{milestone.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="values-section">
        <h3 class="values-title">Our Core Values</h3>
        <div class="values-grid">
          {values.map((value, index) => (
            <div class="value-card" style={`animation-delay: ${index * 0.1}s`}>
              <div class="value-icon">{value.icon}</div>
              <h4 class="value-title">{value.title}</h4>
              <p class="value-description">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .corporate-about {
    padding: 120px 2rem;
    background: white;
    position: relative;
  }

  .about-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .about-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    color: #1e40af;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #64748b;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .about-story {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
    align-items: center;
  }

  .story-image {
    position: relative;
  }

  .image-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(30, 64, 175, 0.15);
  }

  .placeholder-content {
    width: 100%;
    height: 100%;
  }

  .placeholder-content svg {
    width: 100%;
    height: 100%;
  }

  .experience-badge {
    position: absolute;
    bottom: -20px;
    right: -20px;
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
    color: white;
    padding: 1.5rem 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 10px 40px rgba(30, 64, 175, 0.3);
  }

  .badge-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
  }

  .badge-text {
    font-size: 0.85rem;
    font-weight: 500;
    opacity: 0.9;
  }

  .story-content {
    padding: 2rem 0;
  }

  .story-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
  }

  .story-text {
    font-size: 1.05rem;
    color: #475569;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
  }

  .story-highlights {
    display: flex;
    gap: 3rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e2e8f0;
  }

  .highlight {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .highlight-value {
    font-size: 1.75rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .highlight-label {
    font-size: 0.9rem;
    color: #64748b;
    font-weight: 500;
  }

  .timeline-section {
    margin-bottom: 6rem;
  }

  .timeline-title,
  .values-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 3rem 0;
    text-align: center;
  }

  .timeline {
    display: flex;
    justify-content: space-between;
    position: relative;
    padding: 2rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #e2e8f0, #cbd5e1, #e2e8f0);
    transform: translateY(-50%);
  }

  .timeline-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .timeline-marker {
    width: 60px;
    height: 60px;
    background: white;
    border: 3px solid #1e40af;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-marker {
    background: #1e40af;
    transform: scale(1.1);
  }

  .marker-year {
    font-size: 0.75rem;
    font-weight: 700;
    color: #1e40af;
    transition: color 0.3s ease;
  }

  .timeline-item:hover .marker-year {
    color: white;
  }

  .timeline-content {
    text-align: center;
    max-width: 150px;
  }

  .milestone-title {
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 0.5rem 0;
  }

  .milestone-description {
    font-size: 0.85rem;
    color: #64748b;
    line-height: 1.5;
    margin: 0;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .value-card {
    background: #f8fafc;
    border-radius: 20px;
    padding: 2.5rem 2rem;
    text-align: center;
    transition: all 0.4s ease;
    border: 2px solid transparent;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .value-card:hover {
    transform: translateY(-10px);
    background: white;
    border-color: #3b82f6;
    box-shadow: 0 20px 50px rgba(30, 64, 175, 0.1);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .value-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 1rem 0;
  }

  .value-description {
    font-size: 0.95rem;
    color: #64748b;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .about-story {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .story-image {
      max-width: 500px;
      margin: 0 auto;
    }

    .timeline {
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
    }

    .timeline::before {
      display: none;
    }

    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }

    .story-highlights {
      flex-direction: column;
      gap: 1.5rem;
    }

    .values-grid {
      grid-template-columns: 1fr;
    }

    .timeline-item {
      flex: 0 0 calc(50% - 1rem);
    }
  }
</style>