<footer class="corporate-footer">
  <div class="footer-container">
    <div class="footer-main">
      <div class="footer-brand">
        <div class="logo">
          <div class="logo-icon">
            <svg viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="40" height="40" rx="8" fill="url(#footerGrad)"/>
              <path d="M12 20L18 26L28 14" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
              <defs>
                <linearGradient id="footerGrad" x1="0" y1="0" x2="40" y2="40">
                  <stop stop-color="#1e40af"/>
                  <stop offset="1" stop-color="#3b82f6"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <span class="logo-text">Apex Solutions</span>
        </div>
        <p class="brand-description">
          Empowering businesses worldwide to achieve excellence through innovative solutions and strategic partnerships.
        </p>
        <div class="social-links">
          {socialLinks.map(link => (
            <a href={link.href} class="social-link" aria-label={link.name}>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d={link.icon}/>
              </svg>
            </a>
          ))}
        </div>
      </div>

      <div class="footer-links-grid">
        <div class="link-group">
          <h4 class="group-title">Company</h4>
          <ul class="group-links">
            {footerLinks.company.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        <div class="link-group">
          <h4 class="group-title">Services</h4>
          <ul class="group-links">
            {footerLinks.services.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        <div class="link-group">
          <h4 class="group-title">Resources</h4>
          <ul class="group-links">
            {footerLinks.resources.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        <div class="link-group">
          <h4 class="group-title">Legal</h4>
          <ul class="group-links">
            {footerLinks.legal.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-newsletter">
      <div class="newsletter-content">
        <h4 class="newsletter-title">Stay Updated</h4>
        <p class="newsletter-description">Subscribe to our newsletter for industry insights and company updates.</p>
      </div>
      <form class="newsletter-form">
        <input type="email" placeholder="Enter your email" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>

    <div class="footer-bottom">
      <p class="copyright">&copy; 2024 Apex Solutions. All rights reserved.</p>
      <div class="footer-badges">
        <span class="badge">ISO 27001</span>
        <span class="badge">SOC 2</span>
        <span class="badge">GDPR</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .corporate-footer {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    padding: 80px 2rem 40px;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 2.5fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
  }

  .logo-icon svg {
    width: 100%;
    height: 100%;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .brand-description {
    font-size: 1rem;
    color: #94a3b8;
    line-height: 1.7;
    margin: 0;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #3b82f6;
    color: white;
    transform: translateY(-3px);
  }

  .footer-links-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .group-title {
    font-size: 1rem;
    font-weight: 600;
    color: white;
    margin: 0;
  }

  .group-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .group-links a {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .group-links a:hover {
    color: white;
    padding-left: 5px;
  }

  .footer-newsletter {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    gap: 2rem;
  }

  .newsletter-content {
    max-width: 400px;
  }

  .newsletter-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem 0;
  }

  .newsletter-description {
    font-size: 0.9rem;
    color: #94a3b8;
    margin: 0;
  }

  .newsletter-form {
    display: flex;
    gap: 0.75rem;
  }

  .newsletter-form input {
    padding: 1rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 0.95rem;
    width: 280px;
    transition: all 0.3s ease;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: #3b82f6;
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-form input::placeholder {
    color: #64748b;
  }

  .newsletter-form button {
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-form button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 2rem;
  }

  .copyright {
    font-size: 0.9rem;
    color: #64748b;
    margin: 0;
  }

  .footer-badges {
    display: flex;
    gap: 1rem;
  }

  .badge {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #94a3b8;
    letter-spacing: 0.05em;
  }

  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-newsletter {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-content {
      max-width: 100%;
    }
  }

  @media (max-width: 640px) {
    .footer-links-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
      width: 100%;
    }

    .newsletter-form input {
      width: 100%;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-badges {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>