---
const testimonials = [
  {
    quote: "Apex Solutions transformed our entire digital infrastructure. Their strategic approach and execution capabilities exceeded our expectations. We saw a 40% improvement in operational efficiency within the first year.",
    author: "Robert Johnson",
    role: "CEO, Global Financial Services",
    company: "Fortune 500 Company",
    rating: 5
  },
  {
    quote: "The team's expertise in digital transformation is unmatched. They didn't just implement solutions â€“ they became true partners in our success journey. Our customer satisfaction scores increased by 35%.",
    author: "Maria Garcia",
    role: "CTO, Healthcare Innovation Inc.",
    company: "Healthcare Leader",
    rating: 5
  },
  {
    quote: "Working with Apex was a game-changer for our organization. Their data-driven approach and industry knowledge helped us navigate complex challenges and emerge stronger than ever.",
    author: "James Wilson",
    role: "VP of Operations, TechCorp",
    company: "Technology Company",
    rating: 5
  }
];

const achievements = [
  { value: "4.9/5", label: "Average Client Rating" },
  { value: "98%", label: "Client Retention Rate" },
  { value: "500+", label: "Success Stories" },
  { value: "50+", label: "Industry Awards" }
];
---

<section class="corporate-testimonials" id="testimonials">
  <div class="testimonials-container">
    <div class="testimonials-header">
      <span class="section-label">Testimonials</span>
      <h2 class="section-title">What Our Clients Say</h2>
      <p class="section-subtitle">
        Hear from industry leaders who have experienced transformative results through our partnership.
      </p>
    </div>

    <div class="achievements-bar">
      {achievements.map((achievement, index) => (
        <div class="achievement-item" style={`animation-delay: ${index * 0.1}s`}>
          <span class="achievement-value">{achievement.value}</span>
          <span class="achievement-label">{achievement.label}</span>
        </div>
      ))}
    </div>

    <div class="testimonials-grid">
      {testimonials.map((testimonial, index) => (
        <div class="testimonial-card" style={`animation-delay: ${index * 0.15}s`}>
          <div class="quote-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          <div class="rating">
            {[...Array(testimonial.rating)].map(() => (
              <svg width="16" height="16" viewBox="0 0 24 24" fill="#f59e0b">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>
          <blockquote class="quote-text">{testimonial.quote}</blockquote>
          <div class="author-info">
            <div class="author-avatar">
              <span class="avatar-initials">{testimonial.author.split(' ').map(n => n[0]).join('')}</span>
            </div>
            <div class="author-details">
              <span class="author-name">{testimonial.author}</span>
              <span class="author-role">{testimonial.role}</span>
              <span class="author-company">{testimonial.company}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="trust-section">
      <h3 class="trust-title">Trusted by Industry Leaders Worldwide</h3>
      <p class="trust-description">
        From Fortune 500 companies to innovative startups, businesses across the globe rely on our expertise.
      </p>
      <div class="trust-badges">
        <div class="trust-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            <path d="M9 12l2 2 4-4"/>
          </svg>
          <span>ISO 27001 Certified</span>
        </div>
        <div class="trust-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="8" r="7"/>
            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/>
          </svg>
          <span>Top Consulting Firm 2024</span>
        </div>
        <div class="trust-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span>99.9% Project Success Rate</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .corporate-testimonials {
    padding: 120px 2rem;
    background: white;
  }

  .testimonials-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    color: #1e40af;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: #0f172a;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .achievements-bar {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-bottom: 5rem;
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-radius: 20px;
  }

  .achievement-item {
    text-align: center;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .achievement-value {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .achievement-label {
    font-size: 0.85rem;
    color: #64748b;
    font-weight: 500;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 5rem;
  }

  .testimonial-card {
    background: #f8fafc;
    border-radius: 24px;
    padding: 2.5rem;
    position: relative;
    transition: all 0.4s ease;
    border: 2px solid transparent;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .testimonial-card:hover {
    transform: translateY(-10px);
    background: white;
    border-color: #3b82f6;
    box-shadow: 0 25px 60px rgba(30, 64, 175, 0.1);
  }

  .quote-icon {
    color: #1e40af;
    opacity: 0.2;
    margin-bottom: 1rem;
  }

  .rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1.5rem;
  }

  .quote-text {
    font-size: 1.05rem;
    color: #475569;
    line-height: 1.8;
    margin: 0 0 2rem 0;
    font-style: italic;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
  }

  .author-avatar {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #1e40af, #3b82f6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-initials {
    font-size: 1rem;
    font-weight: 700;
    color: white;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .author-name {
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
  }

  .author-role {
    font-size: 0.85rem;
    color: #1e40af;
    font-weight: 500;
  }

  .author-company {
    font-size: 0.8rem;
    color: #94a3b8;
  }

  .trust-section {
    text-align: center;
    padding: 3rem;
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
    border-radius: 24px;
    color: white;
  }

  .trust-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
  }

  .trust-description {
    font-size: 1rem;
    opacity: 0.9;
    margin: 0 0 2rem 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .trust-badge svg {
    opacity: 0.9;
  }

  @media (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .achievements-bar {
      flex-wrap: wrap;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .trust-badges {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }

    .achievements-bar {
      gap: 1.5rem;
    }

    .achievement-value {
      font-size: 1.75rem;
    }
  }
</style>