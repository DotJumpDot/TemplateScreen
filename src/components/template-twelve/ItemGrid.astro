  }

  .item-badge {
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(99, 102, 241, 0.3);
    color: #818cf8;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
  }

  .item-icon {
    font-size: 3.5rem;
    margin: 1.5rem 0 1rem 0;
  }

  .item-name {
    font-size: 1rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.75rem 0;
  }

  .item-rating {
