<section class="spa-booking" id="book">
  <div class="booking-container">
    <div class="booking-info">
      <h2 class="booking-title">Book Your Sanctuary Experience</h2>
      <p class="booking-description">
        Begin your journey to wellness by scheduling your personalized treatment with our expert therapists.
      </p>
      <div class="booking-features">
        <div class="feature-item">
          <span class="check-icon">✓</span>
          <span>Free consultation before booking</span>
        </div>
        <div class="feature-item">
          <span class="check-icon">✓</span>
          <span>Flexible scheduling options</span>
        </div>
        <div class="feature-item">
          <span class="check-icon">✓</span>
          <span>Cancel up to 24 hours before</span>
        </div>
      </div>
    </div>
    <form class="booking-form">
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" placeholder="Enter your name" required />
      </div>
      <div class="form-row">
        <div class="form-group">
          <label>Email Address</label>
          <input type="email" placeholder="your@email.com" required />
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <input type="tel" placeholder="+1 (555) 000-0000" />
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label>Preferred Date</label>
          <input type="date" required />
        </div>
        <div class="form-group">
          <label>Preferred Time</label>
          <select required>
            <option value="">Select time</option>
            <option value="09:00">9:00 AM</option>
            <option value="10:00">10:00 AM</option>
            <option value="11:00">11:00 AM</option>
            <option value="14:00">2:00 PM</option>
            <option value="15:00">3:00 PM</option>
            <option value="16:00">4:00 PM</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label>Treatment</label>
        <select required>
          <option value="">Select treatment</option>
          <option value="aromatherapy">Aromatherapy Massage</option>
          <option value="crystal">Crystal Healing</option>
          <option value="yoga">Yoga & Meditation</option>
          <option value="wrap">Herbal Body Wrap</option>
        </select>
      </div>
      <div class="form-group">
        <label>Special Requests</label>
        <textarea placeholder="Any special requirements or preferences..." rows="3"></textarea>
      </div>
      <button type="submit" class="submit-button">Confirm Booking</button>
    </form>
  </div>
</section>

<style>
  .spa-booking {
    padding: 100px 3rem;
    background: #fff;
  }

  .booking-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
  }

  .booking-info {
    animation: fadeInLeft 0.8s ease-out;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .booking-title {
    font-size: 2.5rem;
    font-weight: 300;
    color: #1e3a32;
    margin: 0 0 1.5rem 0;
  }

  .booking-description {
    font-size: 1.1rem;
    color: #64748b;
    line-height: 1.7;
    margin: 0 0 3rem 0;
    font-weight: 300;
  }

  .booking-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    color: #64748b;
  }

  .check-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: linear-gradient(135deg, #5a8f7e 0%, #7bb3a3 100%);
    color: #fff;
    border-radius: 50%;
    font-size: 0.75rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .booking-form {
    animation: fadeInRight 0.8s ease-out 0.2s both;
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    color: #1e3a32;
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.9rem 1.25rem;
    background: #f0fdf4;
    border: 1px solid rgba(90, 143, 126, 0.2);
    border-radius: 12px;
    color: #1e3a32;
    font-size: 1rem;
    font-weight: 400;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #94a3b8;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #5a8f7e;
    background: #fff;
    box-shadow: 0 0 0 3px rgba(90, 143, 126, 0.1);
  }

  .form-group select {
    cursor: pointer;
    color: #64748b;
  }

  .form-group textarea {
    resize: vertical;
  }

  .submit-button {
    width: 100%;
    background: linear-gradient(135deg, #5a8f7e 0%, #7bb3a3 100%);
    color: #fff;
    border: none;
    padding: 1.25rem 2rem;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.4s ease;
    border-radius: 50px;
  }

  .submit-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(90, 143, 126, 0.3);
  }

  @media (max-width: 1024px) {
    .spa-booking {
      padding: 80px 2rem;
    }

    .booking-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
