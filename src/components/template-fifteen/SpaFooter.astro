---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: "Instagram", href: "#" },
  { name: "Facebook", href: "#" },
  { name: "Pinterest", href: "#" }
];
---

<footer class="spa-footer">
  <div class="footer-top">
    <div class="footer-brand">
      <span class="footer-logo">SERENITY</span>
      <p class="footer-tagline">Your sanctuary for wellness and inner peace</p>
    </div>
    <div class="footer-links">
      <div class="link-column">
        <h4>Wellness</h4>
        <a href="#">Treatments</a>
        <a href="#">Facilities</a>
        <a href="#">Packages</a>
      </div>
      <div class="link-column">
        <h4>Company</h4>
        <a href="#">About Us</a>
        <a href="#">Our Team</a>
        <a href="#">Careers</a>
      </div>
      <div class="link-column">
        <h4>Support</h4>
        <a href="#">Contact</a>
        <a href="#">FAQ</a>
        <a href="#">Policies</a>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="footer-copyright">
      <p>&copy; {currentYear} Serenity Spa. All rights reserved.</p>
    </div>
    <div class="footer-social">
      {socialLinks.map(link => (
        <a href={link.href} class="social-link">{link.name}</a>
      ))}
    </div>
  </div>
</footer>

<style>
  .spa-footer {
    background: linear-gradient(135deg, #1e3a32 0%, #2d5a4d 100%);
    color: #fff;
    padding: 4rem 3rem 2rem;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 3rem;
  }

  .footer-brand {
    flex: 1;
    min-width: 300px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-logo {
    font-size: 1.8rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #a7d8c9;
  }

  .footer-tagline {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 300;
  }

  .footer-links {
    display: flex;
    gap: 4rem;
  }

  .link-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-column h4 {
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: #a7d8c9;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
  }

  .link-column a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 300;
    transition: all 0.3s ease;
  }

  .link-column a:hover {
    color: #a7d8c9;
  }

  .footer-bottom {
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright p {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 300;
    margin: 0;
  }

  .footer-social {
    display: flex;
    gap: 2rem;
  }

  .social-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 400;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: #a7d8c9;
  }

  @media (max-width: 1024px) {
    .spa-footer {
      padding: 3rem 2rem 2rem;
    }

    .footer-top {
      flex-direction: column;
    }

    .footer-links {
      flex-wrap: wrap;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }
  }
</style>
