<section class="startup-contact" id="contact">
  <div class="contact-container">
    <div class="contact-info">
      <h2 class="contact-title">Ready to Get Started?</h2>
      <p class="contact-description">
        Join thousands of teams already using Nova to build amazing products. Start your free trial today.
      </p>
      <div class="contact-benefits">
        <div class="benefit-item">
          <span class="benefit-icon">✓</span>
          <span>No credit card required</span>
        </div>
        <div class="benefit-item">
          <span class="benefit-icon">✓</span>
          <span>14-day free trial</span>
        </div>
        <div class="benefit-item">
          <span class="benefit-icon">✓</span>
          <span>Cancel anytime</span>
        </div>
        <div class="benefit-item">
          <span class="benefit-icon">✓</span>
          <span>24/7 support</span>
        </div>
      </div>
    </div>
    <form class="contact-form">
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" placeholder="John Doe" required />
      </div>
      <div class="form-group">
        <label>Work Email</label>
        <input type="email" placeholder="john@company.com" required />
      </div>
      <div class="form-group">
        <label>Company Size</label>
        <select required>
          <option value="">Select size</option>
          <option value="1-10">1-10 employees</option>
          <option value="11-50">11-50 employees</option>
          <option value="51-200">51-200 employees</option>
          <option value="201+">201+ employees</option>
        </select>
      </div>
      <div class="form-group">
        <label>What interests you most?</label>
        <select required>
          <option value="">Select option</option>
          <option value="features">Product Features</option>
          <option value="pricing">Pricing Plans</option>
          <option value="demo">Request Demo</option>
          <option value="partnership">Partnership</option>
        </select>
      </div>
      <button type="submit" class="submit-button">
        <span class="btn-text">Start Free Trial</span>
        <span class="btn-arrow">→</span>
      </button>
    </form>
  </div>
</section>

<style>
  .startup-contact {
    padding: 100px 3rem;
    background: #0f0f23;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
  }

  .contact-info {
    animation: fadeInLeft 0.8s ease-out;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .contact-title {
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem 0;
  }

  .contact-description {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    margin: 0 0 3rem 0;
    font-weight: 400;
  }

  .contact-benefits {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
    color: #fff;
    border-radius: 50%;
    font-size: 0.75rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .contact-form {
    animation: fadeInRight 0.8s ease-out 0.2s both;
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: #fff;
    font-size: 1rem;
    font-weight: 400;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.3);
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: #8b5cf6;
    background: rgba(139, 92, 246, 0.05);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
  }

  .form-group select {
    cursor: pointer;
    color: rgba(255, 255, 255, 0.5);
  }

  .submit-button {
    width: 100%;
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    color: #fff;
    border: none;
    padding: 1.25rem 2rem;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.4s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .submit-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .submit-button:hover .btn-arrow {
    transform: translateX(5px);
  }

  @media (max-width: 1024px) {
    .startup-contact {
      padding: 80px 2rem;
    }

    .contact-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
