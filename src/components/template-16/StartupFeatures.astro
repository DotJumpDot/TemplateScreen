  }

  .feature-card:hover {
    transform: translateY(-10px);
    background: rgba(139, 92, 246, 0.05);
    border-color: rgba(139, 92, 246, 0.2);
    box-shadow: 0 30px 80px rgba(139, 92, 246, 0.1);
  }

  .feature-icon {
