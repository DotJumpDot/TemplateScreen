    gap: 0.5rem;
    color: #a78bfa;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .feature-link:hover {
    color: #fff;
    gap: 0.75rem;
  }

  @media (max-width: 1024px) {
    .startup-features {
      padding: 80px 2rem;
    }

    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
