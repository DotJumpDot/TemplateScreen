---
const courses = [
  {
    title: 'Complete Web Design Bootcamp',
    instructor: 'Sarah Smith',
    rating: 4.9,
    students: '12.5k',
    price: '$89',
    image: 'https://images.unsplash.com/photo-1587620962725-abab7fe55159?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    tag: 'Design'
  },
  {
    title: 'Python for Data Science 2024',
    instructor: 'Mike Johnson',
    rating: 4.8,
    students: '8.2k',
    price: '$75',
    image: 'https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    tag: 'Development'
  },
  {
    title: 'Digital Marketing Masterclass',
    instructor: 'Emma Davis',
    rating: 4.7,
    students: '5.1k',
    price: '$65',
    image: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    tag: 'Marketing'
  }
];
---

<section class="learn-courses" id="courses">
  <div class="container">
    <div class="section-header">
      <h2>Popular Courses</h2>
      <a href="#" class="view-all">View All Courses ‚Üí</a>
    </div>

    <div class="courses-grid">
      {courses.map(course => (
        <div class="course-card">
          <div class="card-image">
            <img src={course.image} alt={course.title} />
            <span class="tag">{course.tag}</span>
          </div>
          <div class="card-content">
            <div class="meta">
              <span class="rating">‚≠ê {course.rating}</span>
              <span class="students">üë• {course.students}</span>
            </div>
            <h3>{course.title}</h3>
            <p class="instructor">By {course.instructor}</p>
            <div class="footer">
              <span class="price">{course.price}</span>
              <button class="enroll-btn">Enroll Now</button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .learn-courses {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2rem;
    color: #1e293b;
    font-weight: 800;
  }

  .view-all {
    color: #4f46e5;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .view-all:hover {
    color: #4338ca;
  }

  .courses-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .courses-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .courses-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .course-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .course-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .course-card:hover .card-image img {
    transform: scale(1.1);
  }

  .tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(4px);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    color: #4f46e5;
  }

  .card-content {
    padding: 1.5rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: #64748b;
    margin-bottom: 0.75rem;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .instructor {
    color: #94a3b8;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #f1f5f9;
  }

  .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #4f46e5;
  }

  .enroll-btn {
    background: transparent;
    border: 1px solid #4f46e5;
    color: #4f46e5;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .enroll-btn:hover {
    background: #4f46e5;
    color: white;
  }
</style>
